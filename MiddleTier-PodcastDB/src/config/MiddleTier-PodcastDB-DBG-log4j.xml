            <driverClass>com.mysql.cj.jdbc.Driver</driverClass>
            <url>jdbc:mysql://raspbianpi4.jbrmmg.me.uk:3306/logdb?useSSL=false</url>
            <user>loginsert</user>
            <password>rIYpQtmG</password>
        </connectionSource>
    </appender>

    <logger name="com.jbr.middletier.podcast.control">
        <level value="info"/>
        <appender-ref ref="Database"/>
    </logger>

    <root level="info">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>
